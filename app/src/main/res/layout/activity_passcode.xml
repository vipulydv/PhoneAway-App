<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pclubproject.phoneaway.Passcode">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Once this feature is enabled, PhoneAway will require the Login Password to open. "
        android:id="@+id/textView9"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:textColor="#194d16"
        android:text="Set Password"
        android:id="@+id/passSwitch"
        android:textSize="15sp"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:minHeight="80sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Passcode"
        android:textAllCaps="false"
        android:background="@drawable/mybutton"
        android:id="@+id/button"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="39dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/l2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change the passcode for messaging ."
        android:id="@+id/l2"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/passSwitch"
        android:layout_marginTop="29dp" />

</RelativeLayout>
</ScrollView>